{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@controllers/*": ["./api/controllers/*"],
      "@domain/*": ["./domain/*"],
      "@infra/*": ["./api/infra/*"],
      "@utils/*": ["./api/utils/*"],
      "@routes/*": ["./api/routes/*"]
    }
  }
}
